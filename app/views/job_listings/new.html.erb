<%= form_for( @job_listing , remote: true) do |f| %>
  <div class="form-group row">
  <%=f.label :title,:class=>"col-sm-2 col-form-label"%>
    <div class="col-sm-8">\
      <%=f.text_field :title, :required => true,:class=>"form-control"%>
    </div>
  </div>
  <div class="form-group row">
  <%=f.label :description,:class=>"col-sm-2 col-form-label"%>
    <div class="col-sm-8">
      <%=f.text_area :description, :required => true,:class=>"form-control"%>
    </div>
  </div>
  <div class="form-group row">    
  <%=f.label :duration,:class=>"col-sm-2 col-form-label"%>
    <div class="col-sm-8">
      <%=f.text_field :duration, :required => true,:class=>"form-control"%>
    </div>
  </div>
  <%= hidden_field_tag "job_listing[hiring_manager_id]", @current_user.id %>
  <%=f.submit%>
<% end %>

